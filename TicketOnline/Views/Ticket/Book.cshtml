@using TicketOnline.Models

@{
    ViewBag.Title = "Đặt vé thành công";
    Layout = "~/Views/Shared/_Layout.cshtml";

    Coach Coach = ViewBag.Coach;
}

<h2>Đặt vé thành công</h2>

<div class="row">
    <div class="col-md-2">Hành khách:</div>
    <div class="col-md-10">@Model.FirstName @Model.LastName</div>
    <div class="col-md-2">Email:</div>
    <div class="col-md-10">@Model.Email</div>
    <div class="col-md-2">Số điện thoại:</div>
    <div class="col-md-10">@Model.Phone</div>
</div>

<div class="row">
    <h3>Đã đặt thành công vé với thông tin như sau</h3>
    @foreach(Ticket ticket in Model.Tickets)
    {
        <div class="col-md-6" style="border:1px solid;">
            <div class="col-md-5"><p>Số ghế:</p></div>
            <div class="col-md-7"><p>@ticket.SeatId</p></div>
            @if (Coach != null)
            {
                <div class="col-md-5"><p>Tên xe:</p></div>
                <div class="col-md-7"><p>@(Coach.Name != null ? Coach.Name :"" )</p></div>
                <div class="col-md-5"><p>Thời gian khởi thành:</p></div>
                <div class="col-md-7"><p>@(Coach.StartDate != null ? ticket.Coach.StartDate.ToString("dd/MM/yyyy") : "") - @(Coach.StartHour != null ? @Coach.StartHour : "")</p></div>
                <div class="col-md-5"><p>Tuyến đường:</p></div>
                <div class="col-md-7"><p>@(Coach.Router != null ? Coach.Router : "")</p></div>
            }
            
        </div>
    }
</div>

